<view>
  <!-- 顶部用户信息 -->
  <view class="header">
    <!-- 未登录页面 -->
    <view class="no-login" wx:if="{{ !isLogin }}">
      <image src="../../static/my/logo1.jpg"></image>
      <button size="mini" plain="{{ true }}" bindgetuserinfo="login" open-type="getUserInfo">登录</button>
    </view>
    <!-- 登录页面 -->
    <view class="login" wx:else>
      <image src="{{userInfo.avatarUrl}}"></image>
      <view class="name">
      {{userInfo.nickName}}
      </view>
    </view>
  </view>

  <!-- 导航栏 -->
  <view class="menu" >
    <view class="{{indexId==index?'active':''}}" wx:for="{{nav}}" bindtap="navclick" id="{{index}}" wx:key='*this'>{{item}}</view>
  </view>

  <!-- 内容显示 -->
  <!-- 未登录时 -->
  <view class="body-nologin" wx:if="{{ !isLogin }}">
    <view class="content-body-nologin">
      <image src="../../static/my/nologin.jpg"></image>
      <view>可以先去登录哦</view>
    </view>
  </view>
  <!-- 登录之后 -->
  <view wx:else>
    <!-- 菜单列表 -->
    <view wx:if="{{indexId==0}}">
      <!-- 菜单列表 -->
      <view>
        <!-- 没有东西 -->
        <view wx:if="{{ !true }}" class="no-pbmenu">
          <image src="../../static/my/img01.jpg"></image>
          <view>您还没发布过菜单哦</view>
        </view>
        <!-- 有东西 -->
        <view class="hot-recipe-list" wx:else >
          <block wx:for="{{ recipes }}" wx:key='_id'>
            <view class="hot-recipe-list-item" 
            bindtap="todatil" id="{{item._id}}"
            bindlongpress="_delStyle" data-index="{{ index }}">
              <!-- 图片 -->
              <image mode="aspectFill" src="{{ item.images[0]}}"></image>
              <!-- 名字 -->
              <view class="hot-recipe-list-item-title">{{ item.name}}</view>
              <!-- 发布人及浏览次数 -->
              <view class="hot-recipe-list-item-info">
                <view class="left">
                  <image src="{{item.avatarUrl}}"></image>
                  <text>{{item.nickName}}</text>
                </view>
                <view class="right">
                  <image src="../../imgs/airs.png"></image>
                  <text>{{item.views}}</text>
                </view>
              </view>
            </view>

          </block>
        </view>
      </view>
      <!-- 加号 -->
      <view class="jia" bindtap="pbrecipe">
        <image src="../../static/my/jia.png"></image>
      </view>
    </view>
    <!-- 分类列表 -->
    <view class="type-list" wx:if="{{indexId==1}}" >
      <block wx:for="{{ types }}" wx:key='_id'>
        <view class="list-item"  bindtap="tolist" id="{{item._id}}">
          <image src="/static/type/type0{{index+1}}.jpg"></image>
          <text>{{ item.name }}</text>
          <image class="onlyimage" src="../../static/my/next.jpg"></image>
        </view>
      </block>
    </view>
    <!-- 关注列表 -->
    <view  wx:if="{{indexId==2}}">
      <!-- 没有关注 -->
      <view class="no-follow" wx:if="{{ lists.length <=0 }}">
        <image src="../../static/my/nofollow.jpg"></image>
        <view>您还没关注哦</view>
      </view>
      <!-- 关注菜单 -->
      <view wx:else>
        <block wx:for="{{ lists }}" wx:key='_id'>
          <view class="list" bindtap="todatil" id="{{item._id}}">
            <image mode="aspectFill" src="{{ item.images[0] }}" class="recipe-image"></image>
            <!-- 基本信息 -->
            <view class="list-info">
              <view class="list-name">{{ item.name }}</view>
              <view class="list-info-userinfo">
                <image src="{{ item.avatarUrl }}"></image>
                <text>{{ item.nickName }}</text>
              </view>
              <view class="xing">
                <image wx:for="{{item.star}}" src="../../static/list/star-yellow.png"></image>
            <image  wx:for="{{5-item.star}}"  src="../../static/list/star-gray.png"></image>
              </view>
              <view class="number">
                <view>
                  <image src="../../static/list/followed.png"></image>
                  <text>{{ item.likes}}</text>
                </view>
                <view>
                  <image src="../../static/list/airs.png"></image>
                  <text>{{ item.views }}</text>
                </view>
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>

  </view>


</view>